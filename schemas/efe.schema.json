{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Expected Falsifiable Evidence",
  "type": "object",
  "required": ["schema_version", "envelope_id", "created_utc", "assertions"],
  "properties": {
    "schema_version": {"type": "string"},
    "envelope_id": {"type": "string"},
    "created_utc": {"type": "string", "format": "date-time"},
    "assertions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "source", "path", "op"],
        "properties": {
          "id": {"type": "string"},
          "source": {"type": "string"},
          "path": {"type": "string"},
          "op": {"type": "string", "enum": ["eq", "neq", "gte", "lte", "contains", "exists"]},
          "expected": {},
          "note": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "notes": {"type": "string"}
  },
  "additionalProperties": true
}
