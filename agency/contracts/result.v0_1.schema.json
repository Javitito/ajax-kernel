{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://leann.dev/agency/result.v0_1.schema.json",
  "title": "Agency Result v0.1",
  "type": "object",
  "required": ["ok", "answer"],
  "properties": {
    "ok": {"type": "boolean"},
    "answer": {"type": "string"},
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool"],
        "properties": {
          "tool": {"type": "string"},
          "args": {"type": "object", "additionalProperties": true}
        },
        "additionalProperties": false
      },
      "default": []
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "properties": {
          "type": {"type": "string"},
          "path": {"type": "string"},
          "description": {"type": "string"}
        },
        "additionalProperties": false
      },
      "default": []
    },
    "metrics": {
      "type": "object",
      "properties": {
        "tokens_in": {"type": "integer", "minimum": 0, "default": 0},
        "tokens_out": {"type": "integer", "minimum": 0, "default": 0},
        "latency_ms": {"type": "integer", "minimum": 0, "default": 0}
      },
      "additionalProperties": true,
      "default": {"tokens_in": 0, "tokens_out": 0, "latency_ms": 0}
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.0
    },
    "errors": {
      "type": "array",
      "items": {"type": "string"},
      "default": []
    }
  },
  "additionalProperties": true
}
