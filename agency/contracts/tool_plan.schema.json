{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://leann.dev/agency/tool_plan.schema.json",
  "title": "Tool Plan",
  "type": "object",
  "required": ["steps"],
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "tool", "args"],
        "properties": {
          "id": {"type": "string"},
          "tool": {"type": "string"},
          "args": {"type": "object", "additionalProperties": true},
          "reason": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        },
        "additionalProperties": false
      }
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": false
}
